@model GPGDesign.Models.CategoryViewModel
<!-- Page Loader -->
<div class="page-loader">
    <div class="loader">Loading...</div>
</div>
<!-- End Page Loader -->

<div class="page" id="top">
    <section class="small-section bg-dark-lighter">
        <div class="relative container align-left">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="hs-line-11 font-alt mb-20 mb-xs-0">Добавяне на категории</h1>
                </div>               
            </div>
        </div>
    </section>
    <!-- End Head Section -->
    <!-- Section -->
    <section class="page-section">
        <div class="container relative">
            <div class="align-center mb-40 mb-xxs-30">
                <ul class="nav nav-tabs tpl-minimal-tabs">
                    <li class="active">
                        <a href="#mini-one" data-toggle="tab">Добави категория и текстове за съответните езици!</a>
                    </li>
                </ul>
            </div>
            <div class="row">          

                <div class="col-md-4 col-md-offset-4">
                    @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { id = "contact_form", @class = "form contact-form", enctype = "multipart/form-data" }))
                    {

                    <div class="clearfix">
                        <!--English-->
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.EnName, new { @class = "input-md round form-control", placeholder = "Kатегория на английски", id = "enName" })
                            @Html.ValidationMessageFor(m => m.EnName, String.Empty, new { @style = "color:red;!important" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.EnDescription, new { @class = "input-md round form-control", placeholder = "Описание на английски", id = "enDescription", rows = "3" })
                            @Html.ValidationMessageFor(m => m.EnDescription, String.Empty, new { @style = "color:red;!important" })
                        </div>

                        <!--German-->
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.DeName, new { @class = "input-md round form-control", placeholder = "Категория на немски", id = "deName" })
                            @Html.ValidationMessageFor(m => m.DeName, String.Empty, new { @style = "color:red;!important" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.DeDescription, new { @class = "input-md round form-control", placeholder = "Описание на немски", id = "deDescription", rows = "3" })
                            @Html.ValidationMessageFor(m => m.DeDescription, String.Empty, new { @style = "color:red;!important" })
                        </div>

                        <!--Bulgarian-->
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.BgName, new { @class = "input-md round form-control", placeholder = "Категория на български", id = "bgName" })
                            @Html.ValidationMessageFor(m => m.EnName, String.Empty, new { @style = "color:red;!important" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.BgDescription, new { @class = "input-md round form-control", placeholder = "Описание на български", id = "bgDescription", rows = "3" })
                            @Html.ValidationMessageFor(m => m.BgDescription, String.Empty, new { @style = "color:red;!important" })
                        </div>
                        
                            <div class="pt-10">
                                <input type="file" name="file" id="file-1" class="inputfile inputfile-1" data-multiple-caption="{count} files selected" multiple />
                                <label for="file-1"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" /></svg> <span>Select Images&hellip;</span></label>
                            </div>
                            @Html.TextBoxFor(m => m.Id, new { type = "hidden", value = 0 })
                        </div>                    
                        <div class="align-right pt-10">
                            <button class="submit_btn btn btn-mod btn-medium btn-round" id="login-btn">Добави</button>
                        </div>
                    }
                </div>
            </div>
            </div>
    </section>
</div>
