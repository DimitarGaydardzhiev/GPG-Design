@model GPGDesign.Models.CategoryViewModel
<!-- Page Loader -->
<div class="page-loader">
    <div class="loader">Loading...</div>
</div>
<!-- End Page Loader -->

<div class="page" id="top">
    <section class="small-section bg-dark-lighter">
        <div class="relative container align-left">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="hs-line-11 font-alt mb-20 mb-xs-0">Add new category</h1>
                </div>
                <div class="col-md-4 mt-30">
                    <div class="mod-breadcrumbs font-alt align-right">
                        <a href="/">Home</a>&nbsp;/&nbsp;<span>Add</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Head Section -->
    <!-- Section -->
    <section class="page-section">
        <div class="container relative">
            <div class="align-center mb-40 mb-xxs-30">
                <ul class="nav nav-tabs tpl-minimal-tabs">
                    <li class="active">
                        <a href="#mini-one" data-toggle="tab">Add Category</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { id = "contact_form", @class = "form contact-form" }))
                    {
                        <div class="clearfix">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, new { @class = "input-md round form-control", placeholder = "Name", id = "name" })
                                @Html.ValidationMessageFor(m => m.Name, String.Empty, new { @style = "color:red;!important" })
                            </div>
                        </div>
                        <div class="align-right pt-10">
                            <button class="submit_btn btn btn-mod btn-medium btn-round" id="login-btn">Add</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
