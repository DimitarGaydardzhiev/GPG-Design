@model GPGDesign.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Loader -->
<div class="page-loader">
    <div class="loader">Loading...</div>
</div>
<!-- End Page Loader -->

<div class="page" id="top">
    <section class="small-section bg-dark-lighter">
        <div class="relative container align-left">
            <div class="row">
                <div class="col-md-8">
                    <h1 class="hs-line-11 font-alt mb-20 mb-xs-0">Login</h1>
                </div>
                <div class="col-md-4 mt-30">
                    <div class="mod-breadcrumbs font-alt align-right">
                        <a href="/">Home</a>&nbsp;/&nbsp;<span>Login</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Head Section -->
    <!-- Section -->
    <section class="page-section">
        <div class="container relative">
            <div class="align-center mb-40 mb-xxs-30">
                <ul class="nav nav-tabs tpl-minimal-tabs">

                    <li class="active">
                        <a href="#mini-one" data-toggle="tab">Login</a>
                    </li>
                </ul>
            </div>
            <!-- login form -->
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "contact_form", @class = "form contact-form" }))
                    {
                        <div class="clearfix">
                            <!-- Email -->
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "input-md round form-control", placeholder = "Email", id = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, String.Empty, new { @style = "color:red;!important" })
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "input-md round form-control", placeholder = "Password", id = "password" })
                                @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @style = "color:red;!important" })
                            </div>
                        </div>
                        <!-- Send Button -->
                        <div class="pt-10">
                            <button class="submit_btn btn btn-mod btn-medium btn-round btn-full" id="login-btn">Login</button>
                        </div>
                    }

                </div>
            </div>
            <!-- end login form -->
        </div>
    </section>
</div>
